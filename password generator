import random # for generating random choices
import string # for pre defined character sets 

def generate_password(length =12,use_digits=True,use_special_char=True):
    """ This function generates random password
    with parameters as length special characters and
    numbers."""
    #The first letter  of the password is normally a capital or a small letter

    characters = string.ascii_letters #ascii_letter is predefined under string module
    #print(string.ascii_letters) prints (a-z) / (A-Z )u can check
    if use_digits:
        characters += string.digits

    if use_special_char:
        characters += string.punctuation # '!"#$%&\'()*+,-./:;<=>?@[\\]^_`{|}
        #string.punctuation includes all the special characters


    password = ''.join(random.choice(characters)for _ in range(length))
    #password is a variable the stores the generated password 
    #''.join lets you join all the letters together
    #(random.choice(character)) selects a letter from character where character have ascii value
    #for _ in range lets repeat the process as long as we want 
    return password #this returns the generated password from the above.

#main program execution 
if __name__ =="__main__":
    #print("Simple Password :",generate_password(7))#This provides 7 letter password 
   # print("complex password : ", generate_password(12,True,True))# provides 12 letter password with special characters and digits
   # print(" password with only letters ",generate_password(15,False,False))
    #print("password with only special characters :",generate_password(10,True,False))
    print("password with only special characters :",generate_password(10,False,True))